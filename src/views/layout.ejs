<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= typeof title !== 'undefined' ? title + ' | Weight Loss Watch' : 'Weight Loss Watch - Track Together. Transform Together.' %></title>
	<meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Weight Loss Watch combines personal tracking with team accountability. Log your progress, join challenges, and celebrate milestones together.' %>">
	
	<!-- Favicon -->
	<link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
	<link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
	
	<!-- Open Graph -->
	<meta property="og:title" content="<%= typeof title !== 'undefined' ? title + ' | Weight Loss Watch' : 'Weight Loss Watch' %>">
	<meta property="og:description" content="Track your weight. Build your team. Transform together.">
	<meta property="og:type" content="website">
	<meta property="og:url" content="https://weightloss.watch">
	<meta property="og:image" content="https://weightloss.watch/images/og-image.png">
	
	<!-- Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@600;700;800&family=JetBrains+Mono:wght@500&display=swap" rel="stylesheet">
	
	<link rel="stylesheet" href="/dist/main.css">
	
	<!-- Alpine.js cloak to prevent flash of hidden elements -->
	<style>[x-cloak] { display: none !important; }</style>
</head>
<body class="min-h-screen bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200">
    <script>
        // Immediate theme application to prevent flash
        (function() {
            const userTheme = "<%= typeof user !== 'undefined' && user ? user.theme.toLowerCase() : 'system' %>";
            const htmlElement = document.documentElement;
            const isLoggedIn = "<%= typeof user !== 'undefined' && user ? 'true' : 'false' %>" === 'true';

            // Clear any existing theme classes
            htmlElement.classList.remove("light", "dark");

            // Determine active theme
            let activeTheme;
            if (isLoggedIn) {
                // For logged-in users, use server theme and sync localStorage
                activeTheme = userTheme;
                localStorage.setItem('theme', userTheme);
            } else {
                // For guests, use localStorage or default to system
                activeTheme = localStorage.getItem('theme') || userTheme;
                if (!localStorage.getItem('theme')) {
                    localStorage.setItem('theme', userTheme);
                }
            }

            // Apply the theme immediately
            if (activeTheme === "system") {
                const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
                htmlElement.classList.add(prefersDark ? "dark" : "light");
            } else {
                htmlElement.classList.add(activeTheme);
            }
        })();
    </script>
    <nav class="bg-slate-800 dark:bg-slate-950 text-white border-b border-slate-700 dark:border-slate-800" x-data="{ mobileMenuOpen: false }">
        <div class="px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex-shrink-0">
                    <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
                        <svg class="w-8 h-8 text-blue-400" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="20" cy="20" r="16" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-dasharray="85 15"/>
                            <path d="M14 22L18 18L22 21L26 16" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <span class="font-display font-bold text-lg hidden sm:inline">WeightLoss.Watch</span>
                    </a>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex md:items-center md:gap-6">
                    <a href="/about" class="hover:text-blue-400 transition-colors">About</a>
                    <a href="/resources" class="hover:text-blue-400 transition-colors">Resources</a>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <a href="/dashboard" class="hover:text-blue-400 transition-colors">Dashboard</a>
                        <a href="/teams" class="hover:text-blue-400 transition-colors">Teams</a>
                    <% } %>
                </div>

                <!-- Desktop Right Section -->
                <div class="hidden md:flex md:items-center md:gap-4">
                    <!-- Theme Toggle Button -->
                    <div x-data='{ 
                        theme: "<%= typeof user !== "undefined" && user ? user.theme.toLowerCase() : "system" %>",
                        init() {
                            this.theme = localStorage.getItem("theme") || this.theme;
                        }
                    }'>
                        <button @click="toggleTheme()" class="p-2 rounded-lg hover:bg-slate-700 dark:hover:bg-gray-900 transition-colors" title="Toggle theme">
                            <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                            </svg>
                            <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>

                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- User Dropdown -->
                        <div class="relative" x-data="{ open: false }">
                            <button @click="open = !open" @click.away="open = false" class="flex items-center gap-2 focus:outline-none hover:opacity-80 transition-opacity">
                                <% if (user.avatarUrl) { %>
                                    <img src="<%= user.avatarUrl %>" alt="Avatar" class="w-8 h-8 rounded-full">
                                <% } else { %>
                                    <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white text-sm font-bold">
                                        <%= (user.displayName || user.username).charAt(0).toUpperCase() %>
                                    </div>
                                <% } %>
                                <span class="hidden lg:inline"><%= user.displayName || user.username %></span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </button>
                            <div x-show="open" x-transition class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg py-1 z-50 text-gray-800 dark:text-gray-100 border border-gray-200 dark:border-gray-700">
                                <a href="/profile/edit" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Edit Profile</a>
                                <a href="/progress" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Weight Progress</a>
                                <a href="/settings" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Settings</a>
                                <div class="border-t border-gray-100 dark:border-gray-700 my-1"></div>
                                <a href="/logout" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Logout</a>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/login" class="hover:text-blue-400 transition-colors">Login</a>
                        <a href="/register" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg font-medium transition-colors">Register</a>
                    <% } %>
                </div>

                <!-- Mobile Menu Button & Theme Toggle -->
                <div class="flex items-center gap-2 md:hidden">
                    <!-- Mobile Theme Toggle -->
                    <div x-data='{ 
                        theme: "<%= typeof user !== "undefined" && user ? user.theme.toLowerCase() : "system" %>",
                        init() {
                            this.theme = localStorage.getItem("theme") || this.theme;
                        }
                    }'>
                        <button @click="toggleTheme()" class="p-2 rounded-lg hover:bg-slate-700 transition-colors" title="Toggle theme">
                            <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                            </svg>
                            <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Hamburger Menu Button -->
                    <button @click="mobileMenuOpen = !mobileMenuOpen" class="p-2 rounded-lg hover:bg-slate-700 transition-colors" aria-label="Toggle menu">
                        <!-- Hamburger Icon -->
                        <svg x-show="!mobileMenuOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                        <!-- Close Icon -->
                        <svg x-show="mobileMenuOpen" x-cloak class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div x-show="mobileMenuOpen" x-cloak x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 -translate-y-1" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 -translate-y-1" class="md:hidden border-t border-slate-700 dark:border-slate-800">
            <div class="px-4 py-3 space-y-1">
                <!-- Navigation Links -->
                <a href="/about" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">About</a>
                <a href="/resources" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Resources</a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Dashboard</a>
                    <a href="/teams" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Teams</a>
                    
                    <!-- User Section -->
                    <div class="border-t border-slate-700 my-2 pt-2">
                        <div class="flex items-center gap-3 px-3 py-2">
                            <% if (user.avatarUrl) { %>
                                <img src="<%= user.avatarUrl %>" alt="Avatar" class="w-10 h-10 rounded-full">
                            <% } else { %>
                                <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white text-sm font-bold">
                                    <%= (user.displayName || user.username).charAt(0).toUpperCase() %>
                                </div>
                            <% } %>
                            <div>
                                <div class="font-medium"><%= user.displayName || user.username %></div>
                                <div class="text-sm text-slate-400"><%= user.email %></div>
                            </div>
                        </div>
                        <a href="/profile/edit" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Edit Profile</a>
                        <a href="/progress" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Weight Progress</a>
                        <a href="/settings" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Settings</a>
                        <a href="/logout" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors text-red-400">Logout</a>
                    </div>
                <% } else { %>
                    <!-- Auth Links -->
                    <div class="border-t border-slate-700 my-2 pt-2 space-y-2">
                        <a href="/login" class="block px-3 py-2 rounded-lg hover:bg-slate-700 transition-colors">Login</a>
                        <a href="/register" class="block px-3 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-center font-medium transition-colors">Register</a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>
    <div class="max-w-6xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
        <%- body %>
    </div>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html>
