<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Weight Loss Tracker</title>
	<link rel="stylesheet" href="/dist/main.css">
</head>
<body class="min-h-screen bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200">
    <script>
        // Apply initial theme from user preference, or default to system
        const userTheme = "<%= typeof user !== 'undefined' && user ? user.theme.toLowerCase() : 'system' %>";
        const htmlElement = document.documentElement;

        // Sync localStorage with server theme to prevent double-click issue
        localStorage.setItem('theme', userTheme);

        if (userTheme === "system") {
            const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
            htmlElement.classList.add(prefersDark ? "dark" : "light");
        } else {
            htmlElement.classList.add(userTheme);
        }
    </script>
    <nav class="bg-slate-800 dark:bg-gray-950 text-white px-8 py-4 flex justify-between items-center border-b border-slate-700 dark:border-gray-800">
        <ul class="flex gap-8 items-center">
            <li><a href="/" class="hover:opacity-80 transition-opacity">Home</a></li>
            <% if (typeof user !== 'undefined' && user) { %>
                <li><a href="/dashboard" class="hover:opacity-80 transition-opacity">Dashboard</a></li>
                <li><a href="/teams" class="hover:opacity-80 transition-opacity">Teams</a></li>
            <% } %>
        </ul>
        <ul class="flex gap-4 items-center">
            <!-- Theme Toggle Button -->
            <li x-data='{ theme: "<%= typeof user !== "undefined" && user ? user.theme.toLowerCase() : "system" %>" }'>
                <button @click="toggleTheme()" class="p-2 rounded-lg hover:bg-slate-700 dark:hover:bg-gray-900 transition-colors" title="Toggle theme">
                    <!-- Show moon when in light mode or system (prefers light) -->
                    <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                    </svg>
                    <!-- Show sun when in dark mode -->
                    <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </li>
            <% if (typeof user !== 'undefined' && user) { %>
                <li class="relative" x-data="{ open: false }">
                    <button @click="open = !open" @click.away="open = false" class="flex items-center gap-2 focus:outline-none">
                        <% if (user.avatarUrl) { %>
                            <img src="<%= user.avatarUrl %>" alt="Avatar" class="w-8 h-8 rounded-full">
                        <% } else { %>
                            <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white text-sm font-bold">
                                <%= (user.displayName || user.username).charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                        <span><%= user.displayName || user.username %></span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div x-show="open" x-transition class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg py-1 z-10 text-gray-800 dark:text-gray-100 border border-gray-200 dark:border-gray-700">
                        <a href="/profile/edit" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Edit Profile</a>
                        <a href="/progress" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Weight Progress</a>
                        <a href="/settings" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Settings</a>
                        <div class="border-t border-gray-100 dark:border-gray-700 my-1"></div>
                        <a href="/logout" class="block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700">Logout</a>
                    </div>
                </li>
            <% } else { %>
                <li><a href="/login" class="hover:opacity-80 transition-opacity">Login</a></li>
                <li><a href="/register" class="hover:opacity-80 transition-opacity">Register</a></li>
            <% } %>
        </ul>
    </nav>
    <div class="max-w-6xl mx-auto p-8">
        <%- body %>
    </div>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html>
